package org.example;

public class Jornal {
    private String titulo;
    private int paginas;
    private boolean idioma;

    public Jornal(String titulo, int paginas, boolean idioma) {
        this.titulo = titulo;
        this.paginas = paginas;
        this.idioma = idioma;

    }
    public String getTitulo() {
        return titulo;
    }
    public void setTitulo(String titulo) {
        this.titulo = titulo;
    }
    public int getPaginas() {
        return paginas;
    }
    public void setPaginas(int paginas) {
        this.paginas = paginas;
    }
    public boolean isIdioma() {
        return idioma;
    }
    public void setIdioma(boolean idioma) {
        this.idioma = idioma;
    }

    public void informarNoticia() {
        System.out.println("Notícia informada pelo jornal: " + titulo);
    }

}


package org.example;

public class Barco {
    private String material;
    private String tamanho;
    private int passageiros;

    public Barco(String material, String tamanho, int passageiros) {
        this.material = material;
        this.tamanho = tamanho;
        this.passageiros = passageiros;
    }
    public String getMaterial() {
        return material;
    }
    public void setMaterial(String material) {
        this.material = material;
    }
    public String getTamanho() {
        return tamanho;
    }
    public void setTamanho(String tamanho) {
        this.tamanho = tamanho;
    }
    public int getPassageiros() {
        return passageiros;
    }
    public void setPassageiros(int passageiros) {
        this.passageiros = passageiros;
    }

    public void navegar() {
        System.out.println("O barco de " + material + " e tamanho " + tamanho +
                " está navegando com " + passageiros + " passageiros.");
    }
}


package org.example;

public class Mar {
    private String cor;
    private int ondas;
    private int profundidade;

    public Mar(String cor, int ondas, int profundidade) {
        this.cor = cor;
        this.ondas = ondas;
        this.profundidade = profundidade;
    }

    public String getCor() {
        return cor;
    }
    public void setCor(String cor) {
        this.cor = cor;
    }
    public int getOndas() {
        return ondas;
    }
    public void setOndas(int ondas) {
        this.ondas = ondas;
    }
    public int getProfundidade() {
        return profundidade;
    }
    public void setProfundidade(int profundidade) {
        this.profundidade = profundidade;
    }

    public void agitar() {
        System.out.println("O mar de cor " + cor + " está se agitando com "
                + ondas + " ondas e profundidade de "
                + profundidade + " metros!");
    }

}



