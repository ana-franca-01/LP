package org.example;

public class Cafe {
    private int quantidade;
    private String tipo;
    private boolean torrado;

    public Cafe(int quantidade, String tipo, boolean torrado) {
        this.quantidade = quantidade;
        this.tipo = tipo;
        this.torrado = torrado;
    }
    public int getQuantidade() {
        return quantidade;
    }
    public void setQuantidade(int quantidade) {
        this.quantidade = quantidade;
    }
    public String getTipo() {
        return tipo;
    }
    public void setTipo(String tipo) {
        this.tipo = tipo;
    }
    public boolean isTorrado() {
        return torrado;
    }
    public void setTorrado(boolean torrado) {
        this.torrado = torrado;
    }
    public void preparar() {
        String estado = torrado ? "torrado" : "não torrado";
        System.out.println("Preparando " + quantidade + "ml de café " + tipo + " (" + estado + ").");
    }

}


package org.example;

public class Xicara {
    private String material;
    private String cor;
    private int capacidade;

    public Xicara(String material, String cor, int capacidade) {
        this.material = material;
        this.cor = cor;
        this.capacidade = capacidade;
    }

    public String getMaterial() {
        return material;
    }
    public void setMaterial(String material) {
        this.material = material;
    }
    public String getCor() {
        return cor;
    }
    public void setCor(String cor) {
        this.cor = cor;
    }
    public int getCapacidade() {
        return capacidade;
    }
    public void setCapacidade(int capacidade) {
        this.capacidade = capacidade;
    }
    // Método servirCafe
    public void servirCafe(Cafe c) {
        if (c.getQuantidade() <= capacidade) {
            System.out.println("Servindo " + c.getQuantidade() + "ml de café " + c.getTipo() +
                    " na xícara de " + material + " (" + cor + ").");
        } else {
            System.out.println("A xícara não suporta " + c.getQuantidade() + "ml! Capacidade máxima: "
                    + capacidade + "ml.");
        }
    }


}



package org.example;

public class Pessoa {
    private String nome;
    private int idade;
    private boolean gostaDeCafe;

    public Pessoa(String nome, int idade, boolean gostaDeCafe) {
        this.nome = nome;
        this.idade = idade;
        this.gostaDeCafe = gostaDeCafe;
    }
    public String getNome() {
        return nome;
    }
    public void setNome(String nome) {
        this.nome = nome;
    }
    public int getIdade() {
        return idade;
    }
    public void setIdade(int idade) {
        this.idade = idade;
    }
    public boolean isGostaDeCafe() {
        return gostaDeCafe;
    }
    public void setGostaDeCafe(boolean gostaDeCafe) {
        this.gostaDeCafe = gostaDeCafe;
    }
    public void beberCafe(Xicara x, Cafe c) {
        if (!gostaDeCafe) {
            System.out.println(nome + " não gosta de café. ☹️");
            return;
        }

        if (c.getQuantidade() <= 0) {
            System.out.println("Não há café disponível para " + nome + ".");
            return;
        }

        if (c.getQuantidade() > x.getCapacidade()) {
            System.out.println(nome + " não conseguiu beber porque a xícara é pequena demais.");
        } else {
            System.out.println(nome + " está bebendo " + c.getQuantidade() + "ml de café "
                    + c.getTipo() + " na xícara de " + x.getMaterial() + " (" + x.getCor() + "). ☕");
        }
    }
}
